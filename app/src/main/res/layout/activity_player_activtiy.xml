<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/qwe"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".PlayerActivtiy">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
    android:layout_weight="7"
    android:layout_gravity="center"
    android:orientation="vertical"
    >
    <TextView
      android:id="@+id/txtsn"
      android:layout_margin="20dp"
      android:ellipsize="marquee"
      android:marqueeRepeatLimit="marquee_forever"
      android:padding="10dp"
      android:singleLine="true"
      android:text="Song name"
      android:textColor="#fff"
      android:textSize="22sp"
        android:textAlignment="center"
      android:textStyle="italic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TextView>

    <ImageView
        android:id="@+id/imageveiw"


        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/logoam"
        android:textAlignment="viewEnd">

    </ImageView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
      >

      <SeekBar
          android:id="@+id/seekbar"
          android:layout_width="250dp"
          android:layout_height="wrap_content"
          android:layout_alignParentBottom="true"
          android:layout_centerInParent="true"
          android:layout_marginStart="20dp"
          android:layout_marginBottom="40dp">

      </SeekBar>

      <TextView
          android:id="@+id/txtstart"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentLeft="false"
          android:layout_centerInParent="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toLeftOf="@+id/seekbar"
          android:text="0.10"
          android:textColor="#fff"
          android:textSize="14sp">

      </TextView>

      <TextView
          android:id="@+id/txtstop"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentRight="false"
          android:layout_centerInParent="true"
          android:layout_marginStart="10dp"
          android:layout_marginTop="10dp"
          android:layout_marginEnd="10dp"
          android:layout_marginBottom="10dp"
          android:layout_toRightOf="@+id/seekbar"
          android:text="0.10"
          android:textColor="#fff"
          android:textSize="14sp">

      </TextView>

    </RelativeLayout>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="0dp"
    android:layout_weight="3">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

      <Button
          android:id="@+id/playBT"
          android:layout_width="70dp"
          android:layout_height="70dp"

          android:layout_centerHorizontal="true"
          android:background="@drawable/ic_pause_24"
          android:tint="@color/design_default_color_surface">

      </Button>

      <Button
          android:id="@+id/next"
          android:layout_width="50dp"
          android:layout_height="50dp"
          android:layout_marginTop="15dp"
          android:layout_toRightOf="@+id/playBT"
          android:background="@drawable/ic_next_24">

      </Button>
      <Button
          android:id="@+id/prev"
          android:layout_toLeftOf ="@+id/playBT"
          android:layout_marginTop="15dp"
          android:background="@drawable/ic_p"
          android:layout_width="50dp"
          android:layout_height="50dp">

      </Button>

      <Button
        android:id="@+id/btnff"
        android:layout_toRightOf="@id/next"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:background="@drawable/fast_forward_24"
          android:layout_width="40dp"
          android:layout_height="40dp">

      </Button>

      <Button
          android:id="@+id/btnfr"
          android:layout_width="40dp"
          android:layout_height="40dp"
          android:layout_marginTop="20dp"
          android:layout_marginRight="15dp"
          android:layout_toLeftOf="@id/prev"
          android:background="@drawable/fast_rewind_24">

      </Button>






    </RelativeLayout>
  </LinearLayout>

  </LinearLayout>